{
  "expo": {
    "name": "Om-De-Hoek",
    "slug": "Om-De-Hoek",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "omdehoek",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-secure-store",
      "expo-localization"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "be.omdehoek.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Deze app heeft de camera nodig om foto's te kunnen maken.",
        "NSUserNotificationsUsageDescription": "Deze app gebruikt notificaties om je op de hoogte te houden van updates.",
        "NSLocationWhenInUseUsageDescription": "Deze app heeft je locatie nodig om je relevante info in de buurt te tonen."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "be.omdehoek.app",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
